{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@jmick-site/feature/blog": ["libs/feature/blog/src/index.ts"],
      "@jmick-site/feature/career": ["libs/feature/career/src/index.ts"],
      "@jmick-site/feature/project": ["libs/feature/project/src/index.ts"],
      "@jmick-site/feature/tech-skills": [
        "libs/feature/tech-skills/src/index.ts"
      ],
      "@jmick-site/model/page-component": [
        "libs/model/page-component/src/index.ts"
      ],
      "@jmick-site/ui/page-components": [
        "libs/ui/page-components/src/index.ts"
      ],
      "@jmick-site/vanilla-js": ["libs/vanilla-js/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
